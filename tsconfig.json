{
    "compilerOptions": {
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es6",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "DOM",
            "ES2020"
        ],
        "outDir": "./dist",
        "baseUrl": "/",
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}